<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../red_theam.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="table.TableController">
   <children>
      <VBox layoutX="2.0" layoutY="33.0" prefHeight="240.0" prefWidth="494.0">
         <children>
            <Label prefHeight="22.0" prefWidth="145.0" text="Table View">
             <font>
                 <Font name="System Bold Italic" size="19.0" />
             </font>
             </Label>
            <TableView fx:id="tableView" onMouseClicked="#userclickstable" prefHeight="287.0" prefWidth="489.0">
              <columns>
                <TableColumn fx:id="firstnameColumm" onEditCommit="#changeFirstNameCellEvent" prefWidth="110.0" text="First Name" />
                <TableColumn fx:id="lastnameColumn" onEditCommit="#changeLastNameCellEvent" prefWidth="84.0" text="Last Name" />
                  <TableColumn fx:id="birthdayColumn" prefWidth="91.0" text="Birthday" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <Button layoutX="2.0" layoutY="325.0" mnemonicParsing="false" onAction="#addnewPerson" text="Add Person" />
      <HBox layoutX="2.0" layoutY="273.0" prefHeight="46.0" prefWidth="474.0" spacing="10.0">
         <children>
            <TextField fx:id="firstname" promptText="First Name" />
            <TextField fx:id="lastname" promptText="Last Name" />
            <DatePicker fx:id="birthday" promptText="Birthday" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Button layoutX="458.0" layoutY="373.0" mnemonicParsing="false" onAction="#onSampleButtonPushed" prefHeight="26.0" prefWidth="135.0" text="Go to Sample" />
      <Button layoutX="152.0" layoutY="325.0" mnemonicParsing="false" onAction="#deleteSelectedPeople" text="Delete Button" />
      <Button fx:id="detailedviewbutton" layoutX="300.0" layoutY="325.0" mnemonicParsing="false" onAction="#detailedPersonbuttonpushed" text="Detailed Person View" />
   </children>
</AnchorPane>
